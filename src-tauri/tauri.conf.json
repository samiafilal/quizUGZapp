{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "quizzugz",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$APP/*"]
      },
      "path": {
        "all": true
      }
      ,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Admin",
        "label": "Admin",
        "url":"index.html",
        "width": 800,
        "height": 600
      },
      {
        "title": "Screen",
        "label": "Screen",
        "url":"index_screen.html",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
